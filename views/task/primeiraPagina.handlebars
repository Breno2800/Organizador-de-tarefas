<h3> listagem de tarefas </h3>

<a href="/rota1/adicionarTarefa"><button class="btn btn-success">Adicionar categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>opção 1: {{opção1}}</h4>
            <small>{{opção2}}</small>
            <small>{{email}}</small>
            <small>texto: {{texto}}</small> <br>
            <a href="/rota1/categorias/editar/{{_id}}"><button class="btn btn-success mt-4">Editar categorias</button></a>
            <form action="/rota1/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4>nenhuma categoria registrada</h4>
{{/each}}




